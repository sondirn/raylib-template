  "version": "0.2.0",
  "configurations": [
    {
      "name": "BUILD-DEBUG",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/game.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "preLaunchTask": "DEBUG-build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ],
      "windows": {
        "miDebuggerPath": "${env:MINGW64}/bin/gdb.exe",
      }
    }
  ]  
}